
mixin sectionFilmRight(backgroundImage, trailerLink, year, genreFirst, genreSecond, title, desc)
	section.section-film(style="background-image: url" + backgroundImage)
		.container
			div(class="film-wrapper--right")
				.film__trailer
					iframe(src=' ' + trailerLink frameborder='0' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
				div(class="film__info--right")
					.film__badges
						.badges
							.badge--yellow #{year}
							.badge--blue #{genreFirst}
							.badge--orange #{genreSecond}
					h2.film__title #{title}
					.film__desc
						| #{desc}
					.film__buttons
						button.button-play-trailer play trailer
						button.button-add add to list

